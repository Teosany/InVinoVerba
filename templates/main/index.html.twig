{% extends 'base.html.twig' %}

{% block body %}
    <div class="container max-w-[95em] mx-auto px-6 lg:px-8">
        <div class="h-64 rounded-md overflow-hidden bg-cover bg-center"
             style="background-image: url({{ asset('images/categories/' ~ header.thumbnail) }})">
            {#        <div class="h-64 rounded-md overflow-hidden bg-cover bg-center" style="background-image: url('/images/{{categories.0.thumbnail}}')"> #}
            {#        <div class="h-64 rounded-md overflow-hidden bg-cover bg-center" style="background-image: url({{ asset('images/' ~ categories.0.thumbnail) }})"> #}
            <div class="bg-gray-900 bg-opacity-50 flex items-center h-full">
                <div class="px-10 max-w-xl">
                    <h2 class="text-2xl text-white font-semibold">Nos rouges</h2>
                    <p class="mt-2 text-gray-400">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Tempore facere provident
                        molestias ipsam sint voluptatum pariatur.</p>
                    <a href="{{ path('wine.index.red') }}" class="flex max-w-64 inline-block items-center mt-4 px-3 py-2 bg-blue-600 text-white text-sm uppercase font-medium rounded hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
                        <span>Acheter maintenant</span>
                        <svg class="h-5 w-5 mx-2" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                             viewBox="0 0 24 24" stroke="currentColor">
                            <path d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="md:flex md:-mx-4">
            {% for category in categories %}
                <div class="w-full h-64 mt-8 md:mx-4 rounded-md overflow-hidden bg-cover bg-center md:w-1/2"
                     style="background-image: url({{ asset('images/categories/' ~ category.thumbnail) }})">
                    <div class="bg-gray-900 bg-opacity-50 flex items-center h-full">
                        <div class="px-10 max-w-xl">
                            <h2 class="text-2xl text-white font-semibold">{{ category.name }}</h2>
                            <p class="mt-2 text-gray-400">{{ category.description }}</p>
                            <a href="{{ path('wine.index.' ~ category.slug) }}" class="flex items-center mt-4 text-white text-sm uppercase font-medium rounded hover:underline focus:outline-none">
                                <span>Acheter maintenant</span>
                                <svg class="h-5 w-5 mx-2" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <div class="mt-16">
            <h3 class="text-gray-600 text-2xl font-medium">Nos coffres</h3>
            <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 {{ boxes|length == 3 or boxes|length == 6 ? 'xl:grid-cols-3' : 'xl:grid-cols-4' }} mt-6">
                {% for box in boxes %}
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover"
                             style="background-image: url({{ asset('images/boxes/') ~ box.thumbnail }})">
                            <button class="p-2 rounded-full bg-blue-600 text-white mx-5 -mb-4 hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
                                <svg class="h-5 w-5" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                            </button>
                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">{{ box.name }}</h3>
                            <span class="text-gray-500 mt-2">{{ (box.price/100) | format_currency('EUR', locale='fr') }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="mt-16">
            <h3 class="text-gray-600 text-2xl font-medium">En vogue</h3>
            <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-6">
                {% for wine in wines %}
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-80 w-full bg-contain bg-no-repeat bg-center"
                             style="background-image: url({{ asset('images/wines/') ~ wine.thumbnail }})">
                            <button class="p-2 rounded-full bg-blue-600 text-white mx-5 -mb-4 hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
                                <svg class="h-5 w-5" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                            </button>
                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">{{ wine.title }}</h3>
                            <span class="text-gray-500 mt-2">{{ (wine.price/100) | format_currency('EUR', locale='fr') }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
